<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带上敏少走四方之云南-漫步"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@color/yellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="鲍鲍小怪兽 在云南" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:src="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="3">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@color/blue" />

            <TextView
                android:layout_columnSpan="2"
                android:text=" 出发时间 " />

            <TextView android:text="2015/11/14" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_row="1"
                android:src="@color/blue" />

            <TextView
                android:layout_row="1"
                android:text="  人物  " />

            <TextView
                android:layout_columnSpan="2"
                android:layout_row="1"
                android:text="和朋友" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_row="2"
                android:src="@color/blue" />

            <TextView
                android:layout_row="2"
                android:text="  形式  " />

            <TextView
                android:layout_row="2"
                android:text="-" />


        </GridLayout>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="3">


            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@color/blue" />

            <TextView android:text="人均费用" />

            <TextView android:text="4600" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@color/blue" />

            <TextView android:text="出行天数" />

            <TextView android:text="9" />


        </GridLayout>


    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:src="@color/colorDivider" />
</LinearLayout>