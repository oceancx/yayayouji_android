<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/tn_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="160dp"
        android:text="带上敏少走四方之云南-漫步"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/tn_item_main_img"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:src="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginRight="160dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tn_item_face_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@color/colorDivider" />

        <ImageView
            android:id="@+id/tn_item_face_icon_img"
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:layout_marginLeft="8dp"
            android:src="@color/colorPrimaryTextIcon" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tn_item_view_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6421次浏览" />

    </LinearLayout>


</FrameLayout>